@model HospitalProject.Models.PatientDto
@{
    ViewBag.Title = "Edit";
}

<style>
    h2{
        text-align: center;
        margin: 30px;
    }
    .edit-container {
        border: 1px solid black;
        margin: 40px auto;
        padding: 20px;
        text-align: center;
    }
    .edit-container div{
        margin: 10px;
    }
    .edit-container input{
        padding: 10px;
        border-radius: 5px;
    }
    button {
        padding: 10px;
        margin: 10px;
        border: transparent;
        border-radius: 5px;
        color: white;
        background-color: black;
    }
    .links{
        display: block;
        margin: 5px;
    }
</style>
<h2>Update Patient</h2>
<form class="edit-container" action="/Patient/Update/@Model.PatientID" method="POST">
    <div style="display:none;">
        <input type="text" name="PatientID" value="@Model.PatientID" />
    </div>
    <div>
        <label for="patientname">Patient Name: </label>
        <input type="text" id="patientname" name="PatientName" value="@Model.PatientName" />
    </div>
    <div>
        <label for="sex">Sex: </label>
        <input type="text" id="sex" name="Sex" value="@Model.Sex" />
    </div>
    <div>
        <label for="age">Age: </label>
        <input type="number" id="age" name="Age" value="@Model.Age" />
    </div>
    <div>
        <label for="phone">Phone Number: </label>
        <input type="tel" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" />
    </div>
    <div>
        <label for="dob">Date Of Birth: </label>
        <input type="text" id="dob" name="DateOfBirth" value="@Model.DateOfBirth" />
    </div>
    <div>
        <button type="submit">Update</button>
    </div>
    <a class="links" href="/Patient/">Go back to home</a>
    <a class="links" href="/Patient/DeleteConfirm/@Model.PatientID">Delete</a>
</form>



